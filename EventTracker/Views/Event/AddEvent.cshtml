@model EventTracker.Models.Event

@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Add New Event";
}

<h2>Add a New Event</h2>

<form action="/Event/AddEvent" method="post">

    <hr />

    <div class="form-group">
        <label class="col-form-label" for="Description">New Event</label>
        <input type="text" class="form-control col-3" id="Description" name="Description" placeholder="Enter New Event" />
    </div>

    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-outline-dark" />
    </div>

    <hr />

</form>